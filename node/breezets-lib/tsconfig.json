{
    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",
        "moduleResolution": "node",
            "declaration": true,
        "noImplicitAny": true,
        "removeComments": false,
        //"noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "dist",
        "rootDir": "source",
        "sourceRoot": "source",
        "noEmitOnError": true,
        "sourceMap": true
        //"outFile": "generate.js"
    },
    "exclude": [
        "dist",
        "typings",
        "node_modules",
        "lib"
    ]
}
