{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "removeComments": false,
        "sourceMap": true,
        "inlineSources": true,
        "rootDir": "source",
        "noEmitOnError": true,
        "outDir": "dist",
        "declarationDir": "dist",
        "declaration": true
    },
    "include": [ "**/*.ts" ],
    "exclude": [
        "dist",
        "node_modules",
        "test"
    ]
}
